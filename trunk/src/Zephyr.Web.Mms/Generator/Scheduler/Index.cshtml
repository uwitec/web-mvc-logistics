@{
    ViewBag.Title = "Scheduler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Cols = new Zephyr.Web.Sys.Models.sys_roleMenuColumnMapService().GetCurrentUserMenuColumns();
}

@section scripts{
    <script src="/Content/js/viewmodels/com.viewModel.search.js"></script>
    <script type="text/javascript">
        var data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
        var viewModel = function(){ 
            com.viewModel.search.apply(this,arguments);
        }
        ko.bindingViewModel(new viewModel(data));
    </script>
}

    @Html.RenderToolbar()

    <div class="container_12" style="position:relative;">
        <div class="grid_1 lbl">JOBNO</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.JOBNO" class="z-txt " /></div>
        <div class="grid_1 lbl">SNO</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.SNO" class="z-txt " /></div>
        <div class="grid_1 lbl">SC_DRIVER</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.SC_DRIVER" class="z-txt " /></div>
        
        <div class="clear"></div>
        
        <div class="grid_1 lbl">SC_TRUCKCD</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.SC_TRUCKCD" class="z-txt " /></div>
        <div class="grid_1 lbl">SC_DISTANCEID</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.SC_DISTANCEID" class="z-txt " /></div>
        <div class="grid_1 lbl">SC_ONCNTDATE</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.SC_ONCNTDATE" class="z-txt " /></div>
        
        <div class="clear"></div>
        
        <div class="grid_1 lbl">SC_ARRIVEDATE</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.SC_ARRIVEDATE" class="z-txt " /></div>

        <div class="clear"></div>

        <div class="prefix_9" style="position:absolute;top:5px;height:0;">  
            <a id="a_search" href="#" class="buttonHuge button-blue" data-bind="click:searchClick" style="margin:0 15px;">查询</a> 
            <a id="a_reset"  href="#" class="buttonHuge button-blue" data-bind="click:clearClick">清空</a>
        </div>
    </div>
 
    <table data-bind="datagrid:grid">
            <thead>  
            <tr>  
                <th field="SNO"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"SNO") >SNO</th>
                <th field="SC_FRAMECD"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"SC_FRAMECD") >SC_FRAMECD</th>
                <th field="SC_DRIVERTEL"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"SC_DRIVERTEL") >SC_DRIVERTEL</th>
                <th field="SC_ONCNTDATE"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"SC_ONCNTDATE") >SC_ONCNTDATE</th>
                <th field="SC_BACKDATE"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"SC_BACKDATE") >SC_BACKDATE</th>
                <th field="SC_STARTPLACE"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"SC_STARTPLACE") >SC_STARTPLACE</th>
            </tr>                            
        </thead>      
    </table>
 