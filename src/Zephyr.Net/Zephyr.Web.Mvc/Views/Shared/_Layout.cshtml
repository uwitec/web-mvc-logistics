<!doctype html>
<html lang="zh">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8;no-cache"/>
        <title>@ViewBag.Title</title>
        <link href="~/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css/base")
        <link href="~/Content/css/btns/sexybuttons.css"  rel="Stylesheet"/>
        <link href="~/Content/css/btns/css3btn.css"  rel="Stylesheet"/>
        <link href="~/Content/js/jquery-plugins/showloading/showLoading.css"  rel="Stylesheet"/>
        @StylesLess.Render("~/Content/css/theme/" + AppLoginer.Theme)
        <script src="~/Content/js/jquery/jquery-@(AppSettings.JqueryVersion).min.js" type="text/javascript" ></script>
        @RenderSection("head", required: false)
    </head>
    <body class="z-body">
        @RenderBody()
        <!--加载脚本库-->
        @System.Web.Optimization.Scripts.Render("~/Content/js/librarys")
        <!--加载easyui加载器-->
        <script type="text/javascript" src="~/Content/js/easyui/@AppSettings.EasyuiVersion/easyloader.js?locale=@AppLoginer.Locale&theme=@AppLoginer.Theme"></script>
        @RenderSection("scripts", required: false)
        <!--加载图标库CSS-->
        <link href="~/Content/css/icon/icon.css" rel="stylesheet" type="text/css" />
    </body>
</html>
